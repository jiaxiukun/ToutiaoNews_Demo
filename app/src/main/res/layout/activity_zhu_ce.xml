<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xuanze"
>
    <RelativeLayout
        android:id="@+id/register_re"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="手机号注册"
            android:textColor="@color/iblack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="登录"
            android:textColor="@color/iblack"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/register_re"
        android:background="@color/color_window" />

    <EditText
        android:id="@+id/register_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_re"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="       请输入手机号"
        android:maxLines="1"
        android:padding="10dp" />

    <CheckBox
        android:id="@+id/register_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:button="@null"
        android:checked="true"
        android:drawableLeft="@drawable/checkbox"
        android:text="同意《今日头条用户协议》" />

    <Button
        android:id="@+id/register_next"

        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/register_cb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="下一步"
        android:textColor="@color/title_color"
        android:textSize="15sp" />

</RelativeLayout>
